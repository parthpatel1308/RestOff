<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iteamlistrowsub_image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginLeft="30dp"
            android:layout_x="111dp"
            android:layout_y="27dp"
            android:background="@drawable/plashap"
            android:foregroundGravity="center"
            android:src="@drawable/plashap" />
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha=".5"
            android:layout_marginTop="5dp"
            android:layout_below="@id/iteamlistrowsub_image"
            android:background="@color/placeholderbackground"
            android:layout_toRightOf="@id/list_image"/>
        <TextView
            android:id="@+id/iteamlistrowsub_shopename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/placeholderbackground"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/line"
            android:layout_toRightOf="@id/list_image" />
        <TextView
            android:id="@+id/off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/off"
            android:layout_marginTop="12dp"
            android:textColor="@color/light"
            android:layout_marginLeft="45dp"
            android:textSize="15sp"
            android:fontFamily="sans-serif-"
            android:foregroundGravity="right"
            android:layout_below="@id/iteamlistrowsub_image"
            android:layout_toRightOf="@id/iteamlistrowsub_shopename" />
        <TextView
            android:id="@+id/iteamlistrowsub_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/placeholderbackground"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/light"
            android:textSize="15sp"
            android:layout_below="@id/off"
            />
        <ImageView
            android:id="@+id/ruppe"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/iteamlistrowsub_des"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/list_image"
            android:foregroundGravity="bottom"
            android:layout_marginBottom="5dp"
            android:background="@drawable/plashap" />
        <TextView
            android:id="@+id/iteamlistrowsub_shopeprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:background="@color/placeholderbackground"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_below="@id/iteamlistrowsub_des"
            android:layout_toRightOf="@id/ruppe"
            android:layout_marginBottom="5dp"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>